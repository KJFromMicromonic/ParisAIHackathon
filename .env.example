# LiveKit Configuration
# WebSocket URL for your LiveKit server (e.g., wss://your-livekit-server.com)
LIVEKIT_URL=wss://your-livekit-server.com

# LiveKit API credentials for token generation
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Google API Configuration
# API key for Gemini Vision and Realtime API
GOOGLE_API_KEY=your_google_api_key

# Google Maps API Configuration (for navigation features)
# Get your API key from https://console.cloud.google.com/apis/credentials
# Enable these APIs: Places API, Directions API, Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mistral AI Configuration
# API key for Voxstral STT
MISTRAL_API_KEY=your_mistral_api_key

# ElevenLabs Configuration
# API key for TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# ElevenLabs voice ID (default: EXAVITQu4vr4xnSDxMaL)
# Find available voices at https://elevenlabs.io/app/voice-library
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# ElevenLabs TTS model (default: eleven_multilingual_v2)
# Options: eleven_multilingual_v2, eleven_flash_v2_5, etc.
ELEVENLABS_MODEL=eleven_multilingual_v2

# Gemini Configuration
# Gemini Live Realtime model (default: gemini-2.0-flash-exp)
# Options: gemini-2.0-flash-exp, gemini-2.5-flash-native-audio-preview-09-2025
# Note: Gemini is configured for text-only output; ElevenLabs TTS handles audio
GEMINI_MODEL=gemini-2.0-flash-exp

# Gemini Live voice (deprecated - not used when using ElevenLabs TTS)
# This setting is ignored since Gemini outputs text only
# GEMINI_VOICE=Puck

# Voxstral Configuration
# Voxstral STT model (default: voxtral-mini-2507)
# Options: voxtral-mini-2507, voxtral-mini-latest
VOXSTRAL_MODEL=voxtral-mini-2507

# MCP Server Configuration
# Comma-separated list of MCP server URLs
# Example for local Google Maps MCP server: http://localhost:8080
# Example for external servers: https://maps-mcp-server.com,https://airbnb-mcp-server.com
MCP_SERVER_URLS=http://localhost:8080

# MCP Server Headers (JSON object mapping URLs to headers)
# Usually not needed for local servers, but required for authenticated external servers
# Example: {"https://maps-mcp-server.com": {"Authorization": "Bearer token"}}
MCP_SERVER_HEADERS={}

# Redis Configuration (Optional)
# Redis connection URL for distributed session state
# Leave empty if not using Redis
REDIS_URL=

# FastAPI Configuration
# API server host (default: 0.0.0.0)
API_HOST=0.0.0.0

# API server port (default: 8000)
API_PORT=8000

# Video Processing Configuration
# Target FPS for video frame processing (default: 2.0)
# Lower values reduce API calls but may miss obstacles
VIDEO_PROCESSING_FPS=2.0

# JPEG quality for video frame encoding (1-100, default: 85)
VIDEO_JPEG_QUALITY=85

# Obstacle Detection Configuration
# DataChannel topic for obstacle detection results (default: obstacle_detection)
OBSTACLE_DETECTION_TOPIC=obstacle_detection

